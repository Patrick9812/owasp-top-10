<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zmiana Hasła</title>
    <link rel="stylesheet" href="/login.css"> 
</head>
<body>
    <div class="container">
        <h2>Zmień Hasło</h2>

        <% if (typeof error !== 'undefined' && error) { %>
            <div style="color: red; padding: 10px; border: 1px solid red; margin-bottom: 15px; border-radius: 4px; text-align: center;">
                **Błąd:** <%= error %>
            </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
            <div style="color: green; padding: 10px; border: 1px solid green; margin-bottom: 15px; border-radius: 4px; text-align: center;">
                **Sukces:** <%= success %>
            </div>
        <% } %>

        <form action="/change-password-secure" method="POST" id="changePasswordForm">
            <div class="form-group">
                <label for="currentPassword">Aktualne Hasło:</label>
                <input type="password" id="currentPassword" name="currentPassword" required> 
            </div>
            
            <div class="form-group">
                <label for="newPassword">Nowe Hasło:</label>
                <input type="password" id="newPassword" name="newPassword" required>
            </div>

            <div class="form-group">
                <label for="repeatNewPassword">Powtórz Nowe Hasło:</label>
                <input type="password" id="repeatNewPassword" name="repeatNewPassword" required>
            </div>
            
            <button type="submit">Zmień Hasło</button>
        </form>
        
        <div class="switch-link">
            
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('changePasswordForm');
            
            form.addEventListener('submit', (event) => {
                const newPassword = document.getElementById('new_password').value;
                const confirmPassword = document.getElementById('confirm_password').value;
                const currentPassword = document.getElementById('current_password').value;

                if (currentPassword === '' || newPassword === '' || confirmPassword === '') {
                    event.preventDefault(); 
                    alert('Proszę wypełnić wszystkie pola hasła.'); 
                    return false;
                }

                if (newPassword !== confirmPassword) {
                    event.preventDefault(); 
                    alert('Nowe hasło i jego powtórzenie nie zgadzają się.'); 
                    return false;
                }
            });
        });
    </script>
</body>
</html>